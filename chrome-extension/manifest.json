{
  "manifest_version": 3,
  "name": "DevSync - 页面元素编辑器",
  "version": "1.0.0",
  "description": "在本地前端页面上拖拽调整元素位置和大小，并同步到本地文件",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "file:///*",
    "http://localhost/*",
    "http://127.0.0.1/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
